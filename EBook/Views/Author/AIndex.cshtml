@using EBook.Domain.Entities
@model IEnumerable<Author>
@{
    ViewData["Title"] = "AIndex";
}

<h1>Author</h1>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.PictureURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.AuthorBio)</th>
                    <th>@Html.DisplayNameFor(model=>model.Data)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.PictureURL" alt="@item.AuthorBio" style="max-width: 200px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.AuthorBio)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Data)
                        </td>
                    <td class="align-middle">
                    <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-outline-info"><i class="bi bi-pencil-eye"></i>Details</a>
                    <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 65px;" class="text-white">
    <a asp-controller="Book" asp-action="Add" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add Book </a>
    <a asp-controller="Book" asp-action="AddCategorie" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add Categorie </a>
</div>