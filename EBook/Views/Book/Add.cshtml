@using EBook.Domain.Entities;
@model Book;

@{
    ViewData["Title"] = "Add";
  }
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add Book</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Book" asp-action="Add" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descriptions" class="control-label">Descriptions</label>
                        <input asp-for="Descriptions" class="form-control" />
                        <span asp-validation-for="Descriptions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Price</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Authors" class="control-label">Authors</label>
                        <input asp-for="Authors" class="form-control" />
                        <span asp-validation-for="Authors" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="NrPage" class="control-label">NrPage</label>
                        <input asp-for="NrPage" class="form-control" />
                        <span asp-validation-for="NrPage" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="URL" class="control-label">URL</label>
                        <input asp-for="URL" class="form-control" />
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorId" class="control-label">Author</label>
                        <select asp-for="AuthorId" asp-items="ViewBag.Authors" class="form-control"></select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BookCategorie" class="control-label">Category</label>
                        <select asp-for="BookCategorie" asp-items="ViewBag.Categories" class="form-control"></select>
                        <span asp-validation-for="BookCategorie" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>