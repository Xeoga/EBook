@using EBook.Domain.Entities
@model Book
@{
    ViewData["Title"] = "Add";
    }
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add Book</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descriptions" class="control-label"></label>
                        <input asp-for="Descriptions" class="form-control" />
                        <span asp-validation-for="Descriptions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Authors" class="control-label"></label>
                        <input asp-for="Authors" class="form-control" />
                        <span asp-validation-for="Authors" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorId" class="control-label"></label>
                        <input asp-for="AuthorId" class="form-control" />
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="NrPage" class="control-label"></label>
                        <input asp-for="NrPage" class="form-control" />
                        <span asp-validation-for="NrPage" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="URL" class="control-label"></label>
                        <input asp-for="URL" class="form-control" />
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="PublishingHouseId" class="control-label"></label>
                        <input asp-for="PublishingHouseId" class="form-control" />
                        <span asp-validation-for="PublishingHouseId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BookCategorie" class="control-label"></label>
                        <input asp-for="BookCategorie" class="form-control" />
                        <span asp-validation-for="BookCategorie" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>