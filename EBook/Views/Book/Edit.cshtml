@using EBook.Domain.Entities;
@model Book;

@{
    ViewData["Title"] = "Edit";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit Book</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Book" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img class="rounded-circle" id="PictureURLPreview" style="max-width: 200px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="URL" class="control-label"></label>
                        <input asp-for="URL" class="form-control" />
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descriptions" class="control-label"></label>
                        <input asp-for="Descriptions" class="form-control" />
                        <span asp-validation-for="Descriptions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorId" class="control-label">Author</label>
                        <select asp-for="AuthorId" asp-items="ViewBag.Authors" class="form-control"></select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BookCategorie" class="control-label">Category</label>
                        <select asp-for="BookCategorie" asp-items="ViewBag.Categories" class="form-control"></select>
                        <span asp-validation-for="BookCategorie" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Show All </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


