@using EBook.Domain.Entities.User
@model ULoginData
@{
    ViewData["Title"] = "SingUp";
}
<style>
    .register{
        text-align:center;
    }

    .confirm {
        position: relative;
        top: 10px;
    }
</style>

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="register">
            <p>
                <h1>Register</h1>
            </p>
        </div>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="SingUp">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Credential" class="control-label">Email</label>
                        <input asp-for="Credential" placeholder="Enter Email" class="form-control" />
                        <span asp-validation-for="Credential" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" placeholder="Enter password"class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoginIp" class="control-label">Name</label>
                        <input asp-for="LoginIp" placeholder="Enter username" class="form-control" />
                        <span asp-validation-for="LoginIp" class="text-danger"></span>
                    </div>

                    <div class="confirm">
                        <input type="submit" value="SingUp" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="LogIn">Return to LogIn page</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
